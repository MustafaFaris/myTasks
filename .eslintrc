{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["plugin:vue/vue3-essential", "eslint:recommended", "@vue/prettier"],
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 120,
        "useTabs": false,
        "endOfLine":"auto" //Needed because Windows uses "CRLF" End of line sequence by default. 
      }
    ],
    "indent": ["off", "tab"],
    "linebreak-style": ["off"],
    "semi": ["warn", "always"],
    "no-set-state": "off",
    "no-unused-vars": [
      "warn",
      {
        "ignoreRestSiblings": true
      }
    ],
    "no-console": ["off"],
    "optionalChaining": 0,
    "no-debugger": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/*.{j,t}s?(x)",
        "**/tests/unit/**/*.spec.{j,t}s?(x)",
      ],
      "env": {
        "jest": true
      }
    }
  ]
}


